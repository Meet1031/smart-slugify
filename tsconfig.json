{
  "compilerOptions": {
    "target": "ES2020",              // modern JS version
    "module": "CommonJS",            // Node.js module system
    "outDir": "./dist",              // compiled files go here
    "rootDir": "./src",              // source TS files here
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]            // include all TS files in src
}
